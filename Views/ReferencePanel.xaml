<UserControl x:Class="ArtLancer.Views.ReferencePanel"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:ArtLancer.Views"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">

    <UserControl.Resources>
        <Storyboard x:Key="Ref_Open">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From=" 0,0,470,0" To="0,0,0,0" DecelerationRatio=".5" Duration="0:0:1" />
        </Storyboard>
        <Storyboard x:Key="Ref_Close">
            <ThicknessAnimation Storyboard.TargetProperty="Margin" From="0,0,0,0" To=" 0,0,470,0" DecelerationRatio=".5" Duration="0:0:1" />
        </Storyboard>
    </UserControl.Resources>

    <Grid x:Name="Ref">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="50"/>
        </Grid.ColumnDefinitions>
        <Button x:Name="Nicker">
            <Label x:Name="lbl" Content="Label" Height="34" Width="98"/>
        </Button>
        <Button x:Name="RefToggler" Click="RefPan_Toggle" Grid.Column="1" Height="50" VerticalAlignment="Top"></Button>
    </Grid>
</UserControl>
